{
    "compilerOptions": {
      "target": "ES2020", // Changed for Node 14 compatibility
      "module": "commonjs", // Changed for Node 14 compatibility
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node"],
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/api/**/*"]
  }