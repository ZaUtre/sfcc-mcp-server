{
  "name": "sfcc-mcp-server",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server for interacting with Salesforce Commerce Cloud (SFCC) APIs",
  "type": "module",
  "bin": {
    "sfcc-mcp": "./build/index.js"
  },
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc && chmod 755 build/index.js && cp src/endpoints.json build/",
    "test:ocapi": "node test-ocapi-product.js",
    "test:catalogs": "node test-ocapi-product.js",
    "prepare": "npm run build"
  },
  "files": [
    "build"
  ],
  "keywords": ["salesforce", "commerce cloud", "sfcc", "mcp", "model context protocol"],
  "author": "Dimitar Peev",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "axios": "^1.8.4",
    "commerce-sdk": "^4.1.0",
    "dotenv": "^16.4.7",
    "form-data": "^4.0.2",
    "loglevel": "^1.9.2",
    "node-fetch": "^3.3.2",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "openapi-typescript-codegen": "^0.29.0",
    "swagger-typescript-api": "^13.0.24"
  }
}
